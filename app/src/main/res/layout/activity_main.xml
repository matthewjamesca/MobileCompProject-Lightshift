<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mc.group.seven.mcprojectlightshift.MainActivity">

    <Button
        android:id="@+id/btn_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/playbtn_name"
        android:onClick="openGame"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintVertical_bias="0.363"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintLeft_creator="1" />

    <Button
        android:id="@+id/button_contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact Us"
        android:onClick="openContactUs"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="21dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_dl"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/btn_dl"
        android:layout_marginLeft="21dp" />

    <Button
        android:id="@+id/btn_dl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Download Levels"
        android:onClick="openDownloadableLevels"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="23dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_lvlSelect"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/btn_lvlSelect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Level Select"
        android:onClick="openLevelSelect"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="17dp"
        android:layout_marginTop="19dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_play"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/btn_dl" />

    <TextView
        android:id="@+id/tv_titleB"
        android:layout_width="67dp"
        android:layout_height="41dp"
        android:text="Shift"
        android:textColor="#00b1ff"
        android:textSize="32sp"
        android:textStyle="bold|italic"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/btn_play"
        android:layout_marginStart="65dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="40dp"
        app:layout_constraintLeft_toLeftOf="@+id/tv_titleA" />

    <TextView
        android:id="@+id/tv_titleA"
        android:layout_width="74dp"
        android:layout_height="39dp"
        android:text="Light"
        android:textColor="#fff100"
        android:textSize="32sp"
        android:textStyle="bold|italic"
        tools:layout_constraintRight_creator="1"
        android:layout_marginEnd="30dp"
        app:layout_constraintRight_toRightOf="@+id/btn_play"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_titleB"
        tools:layout_constraintBaseline_creator="1" />
</android.support.constraint.ConstraintLayout>

